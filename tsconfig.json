{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDirs": ["src"],
    "sourceMap": true,
    "target": "esnext",
    "outDir": "dist/out-tsc",
    "types": ["node"],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es5",
      "es6",
      "es7",
      "es2017",
      "es2021"
    ],
    "declaration": true,
    "declarationDir": "lib",
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "typeRoots": ["node_modules/@types"],
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "jsx": "react"
  },
  "include": [
    "src",
    "build-utils/**.*.js",
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["node_modules", "dist", "build-utils", "webpack"]
}
